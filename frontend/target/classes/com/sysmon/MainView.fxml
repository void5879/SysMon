<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sysmon.controller.MainController">
   <center>
      <TableView fx:id="processTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="pidColumn" prefWidth="75.0" text="PID" />
          <TableColumn fx:id="ppidColumn" prefWidth="75.0" text="PPID" />
          <TableColumn fx:id="userColumn" prefWidth="120.0" text="User" />
          <TableColumn fx:id="stateColumn" prefWidth="75.0" text="State" />
          <TableColumn fx:id="commandColumn" prefWidth="350.0" text="Command" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnEndTask" mnemonicParsing="false" text="End Task" />
         </children>
         <padding>
            <Insets bottom="8" left="8" right="8" top="8" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
